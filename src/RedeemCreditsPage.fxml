<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="BurritoKing_A2.CreditsController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Current Credits:">
               <font>
                  <Font name="Georgia Bold Italic" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="50.0" top="-170.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="currentCreditsLabel" text="Test">
               <font>
                  <Font name="Georgia" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="90.0" top="-30.0" />
               </VBox.margin>
            </Label>
            <Label alignment="CENTER" text="How many credits would you like to redeem?">
               <font>
                  <Font name="Georgia Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="-50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="creditsTF" onKeyTyped="#creditsTyped" promptText="Enter credits" style="-fx-border-color: #263F73; -fx-border-width: 0px 0px 2px 0px;">
               <font>
                  <Font name="Georgia" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="-150.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
         </children>
      </VBox>
   </center>
   <top>
      <Button mnemonicParsing="false" onAction="#openOrderDetailsPage" style="-fx-background-color: #263F73;" text="&lt;- Back" textFill="WHITE" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font name="Georgia" size="15.0" />
         </font>
      </Button>
   </top>
   <bottom>
      <Button mnemonicParsing="false" onAction="#openPaymentPage" style="-fx-background-color: #263F73;" text="Go to Payment" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
